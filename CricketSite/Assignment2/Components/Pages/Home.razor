<!-- Player Gallery -->
<section id="players" class="player-gallery py-5">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Featured Players</h2>
            <p class="section-subtitle">Build your team with the world's best cricketers</p>
        </div>
        <div class="row g-4">
            @foreach (var player in players)
            {
                <div class="col-md-4">
                    <div class="player-card animate__animated animate__fadeInUp">
                        <div class="player-image-container">
                            <img src="@player.ImageUrl" alt="@player.Name" class="player-image" loading="lazy" />
                            <div class="player-overlay">
                                <div class="player-stats">
                                    <div class="stat-item">
                                        <span class="stat-value">@player.Rating</span>
                                        <span class="stat-label">Rating</span>
                                    </div>
                                    <div class="stat-item">
                                        <span class="stat-value">@player.Price</span>
                                        <span class="stat-label">Value</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="player-info">
                            <h3 class="player-name">@player.Name</h3>
                            <span class="player-role @GetRoleClass(player.Role)">@player.Role</span>
                            <div class="player-team">
                                <img src="@player.TeamLogo" alt="@player.Team" class="team-logo" />
                                <span>@player.Team</span>
                            </div>
                            <div class="d-grid mt-3">
                                <button class="btn btn-sm btn-outline-primary">Add to Team</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Points Table -->
<section id="points" class="points-table py-5 bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Player Leaderboard</h2>
            <p class="section-subtitle">Top performers in the current season</p>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Rank</th>
                        <th>Player</th>
                        <th>Team</th>
                        <th>Points</th>
                        <th>Matches</th>
                        <th>Form</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var (player, index) in playersPoints.Select((p, i) => (p, i)))
                    {
                        <tr class="animate__animated animate__fadeIn" style="animation-delay: @(index * 0.1 + "s")">
                            <td>@(index + 1)</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@player.ImageUrl" alt="@player.Name" class="rounded-circle me-3" width="40" height="40" />
                                    <div>
                                        <h6 class="mb-0">@player.Name</h6>
                                        <small class="text-muted">@player.Role</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@player.TeamLogo" alt="@player.Team" class="me-2" width="24" height="24" />
                                    <span>@player.Team</span>
                                </div>
                            </td>
                            <td class="fw-bold">@player.Points</td>
                            <td>@player.Matches</td>
                            <td>
                                @if (player.Trend == "up")
                                {
                                    <span class="text-success"><i class="bi bi-graph-up-arrow"></i> +@player.LastPoints</span>
                                }
                                else if (player.Trend == "down")
                                {
                                    <span class="text-danger"><i class="bi bi-graph-down-arrow"></i> -@player.LastPoints</span>
                                }
                                else
                                {
                                    <span class="text-warning"><i class="bi bi-dash-circle"></i> @player.LastPoints</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

